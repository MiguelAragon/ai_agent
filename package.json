{
  "name": "chatbot-app",
  "version": "1.0.0",
  "description": "A ChatGPT-like chatbot with React frontend and Express backend",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm start",
    "client": "cd client && npm start",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install"
  },
  "keywords": [
    "chatbot",
    "react",
    "express",
    "openai"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "install-all": "^1.1.0"
  }
}
